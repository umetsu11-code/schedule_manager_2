<h1>予定編集</h1>

<%= form_with model: @event, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :start_time, "開始日" %>
    <%= f.datetime_select :start_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :end_time, "終了日" %>
    <%= f.datetime_select :end_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :all_day, "終日の場合はチェックを入れます" %>
    <%= f.check_box :all_day, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :memo, "スケジュールメモ" %>
    <%= f.text_area :memo, class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit "更新する", class: 'button' %>
    <%= link_to 'キャンセル', events_path, class: 'button cancel-button' %>
  </div>
<% end %>
